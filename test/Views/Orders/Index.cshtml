@model IEnumerable<test.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="color:black">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDetail.OrderID)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDetail.OrderID)
        </td>
        <td>

            <input type="button" class="btn btn-info"
                   value="Edit"
                   onclick="location.href='@Url.Action("Edit", "Orders",new { id = item.OrderID  })'" />|
            <input type="button" class="btn btn-primary"
                   value="Details"
                   onclick="location.href='@Url.Action("Details", "Orders",new { id = item.OrderID  })'" />|
            <input type="button" class="btn btn-danger"
                   value="Delete"
                   onclick="location.href='@Url.Action("Delete", "Orders",new { id = item.OrderID  })'" />
            @*@Html.ActionLink("Edit", "Edit", new { id=item.OrderID }) |
        @Html.ActionLink("Details", "Details", new { id=item.OrderID }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.OrderID })*@
        </td>
    </tr>
}

</table>
