    @model IEnumerable<test.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    #apply {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

        #apply td, #apply th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #apply tr {
            background-color: #f2f2f2;
        }

            #apply tr:hover {
                background-color: #ddd;
            }

        #apply th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
            background-color: #4CAF50;
            color: white;
        }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="apply" style="color:black">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderDate)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.Customer.CustomerName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderDate)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CustomerName)
        </td>
        <td>

            <input type="button" class="btn btn-info"
                   value="Edit"
                   onclick="location.href='@Url.Action("Edit", "Order",new { id = item.OrderID  })'" />|
            <input type="button" class="btn btn-primary"
                   value="Details"
                   onclick="location.href='@Url.Action("Details", "Order",new { id = item.OrderID  })'" />|
            <input type="button" class="btn btn-danger"
                   value="Delete"
                   onclick="location.href='@Url.Action("Delete", "Order",new { id = item.OrderID  })'" />
            @*@Html.ActionLink("Edit", "Edit", new { id=item.OrderID }) |
        @Html.ActionLink("Details", "Details", new { id=item.OrderID }) |
        @Html.ActionLink("Delete", "Delete", new { id=item.OrderID })*@
        </td>
    </tr>
}

</table>
